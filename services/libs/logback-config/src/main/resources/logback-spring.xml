<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- properties from application.yml -->
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <springProperty scope="context" name="loggingOutput" source="logging.output"/>

    <variable scope="context" name="fatalMarkerSensitiveLogLevel" value="%replace(%marker{}%level){'^FATAL.*$', 'FATAL'}" />
    <variable scope="context" name="jsonLogFormat" value='
{
    "logging": {
        "level": "${fatalMarkerSensitiveLogLevel}"
    },
    "service": {
        "name": "${springAppName:-}",
    },
    "trace_sleuth_internal": "%X{X-B3-TraceId:-}",
    "span": "%X{X-B3-SpanId:-}",
    "parent": "%X{X-B3-ParentSpanId:-}",
    "trace_id": "%X{trace-id:-}",
    "exportable": "%X{X-Span-Export:-}",
    "pid": "${PID:-}",
    "thread": "%thread",
    "class": "%logger{40}",
    "message": "%message",
    "error": {
        "id": "%X{error-id:-}",
        "message": "%X{error-message:-}",
        "code": "%X{error-code:-}",
        "stacktrace": "%exception"
    }
}' />

    <appender name="jsonAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>${jsonLogFormat}</pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{[yyyy-MM-dd HH:mm:ss.SSS]} %highlight(%-5(${fatalMarkerSensitiveLogLevel})) %yellow(%replace(trace-id\(%X{trace-id:-}\)){'trace-id\(\)', ''}) %green(%replace(feature\(%X{feature:-}\)){'feature\(\)', ''}) %magenta([%thread]) %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="info">
        <if condition='property("loggingOutput").equals("json")'>
            <then>
                <appender-ref ref="jsonAppender"/>
            </then>
            <else>
                <appender-ref ref="consoleAppender"/>
            </else>
        </if>
    </root>
</configuration>